<div class="space-y-4 mx-auto border p-2 rounded-2xl shadow-xl border-black/80 w-8/12">
  <div class="title text-start">
    <strong>
      <%= comment.user.email %>
    </strong>
    <%= comment.created_at.strftime('%d.%m.%y, %H:%M') %>
  </div>
  <div class="seporator h-px w-full border border-gray-400"></div>
  <div class="body text-start">

    <%= comment.content %>
  </div>
  <% if comment.user == current_user %>
    <%= form_with url: article_comment_path(comment.article, comment), method: :delete do %>
      <%= submit_tag 'Удалить', data: { confirm: 'Вы уверены?' } %>
    <% end %>
  <% end %>

</div>