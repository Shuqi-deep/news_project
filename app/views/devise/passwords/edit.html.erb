<div class="w-full flex justify-center mt-10 h-5/6">
    <div class="space-y-4 border-2 border-gray-500 px-10 py-7 w-6/12 xl:w-3/12 rounded-xl text-center shadow-2xl">
<h2 class="font-bold text-2xl ">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
     <div class="space-y-3">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field space-y-1 ">
    <%= f.label :password, "New password", :class=>"text-lg " %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, :placeholder=>"Input your password", :class=>"rounded-lg ", autocomplete: "new-password" %>
  </div>

  <div class="field space-y-1 ">
    <%= f.label :password_confirmation, "Confirm new password", :class=>"text-lg " %><br />
    <%= f.password_field :password_confirmation, :placeholder=>"Input your password", :class=>"rounded-lg ", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", :class=>"p-2 bg-gray-300 cursor-pointer w-5/6 rounded-full mt-4 mb-14 translate hover:bg-gray-300/60"%>
  </div>
    </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>