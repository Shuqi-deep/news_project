<div class="w-full flex justify-center mt-10 h-5/6">
    <div class="space-y-4 border-2 border-gray-500 px-7 py-5   w-6/12 xl:w-3/12 rounded-xl text-center shadow-2xl">
<h2 class="font-bold text-2xl mb-20">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field space-y-1 mb-5">
    <%= f.label :email, :class=>"text-lg " %><br />
    <%= f.email_field :email, :placeholder=>"Input your email", :class=>"rounded-lg ", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions mb-28">
    <%= f.submit "Send message", :class=>"p-2 bg-gray-300 cursor-pointer w-5/6 rounded-full mt-4 mb-5 translate hover:bg-gray-300/60"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>