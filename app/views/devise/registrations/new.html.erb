<div class="w-full flex justify-center mt-10 min-h-5/6">
    <div class="space-y-4 border-2 border-gray-500 px-7 py-5  w-6/12 xl:w-3/12 rounded-xl text-center shadow-2xl">
<h2 class="font-bold text-2xl ">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="space-y-3">
    <div class="field space-y-1 ">
      <%= f.label :email, :class=>"text-lg "  %><br />
      <%= f.email_field :email, :placeholder=>"Input your email", :class=>"rounded-lg ", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field space-y-1">
      <%= f.label :password, :class=>"text-lg " %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, :placeholder=>"Input your password", :class=>"rounded-lg ", autocomplete: "new-password" %>
    </div>

    <div class="field space-y-1">
      <%= f.label :password_confirmation, :class=>"text-lg " %><br />
      <%= f.password_field :password_confirmation, :placeholder=>"Confirm your password", :class=>"rounded-lg ", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class=>"p-2 bg-gray-300 cursor-pointer w-5/6 rounded-full mt-4 translate hover:bg-gray-300/60 mb-12" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>